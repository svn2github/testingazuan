<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="it.eng.spagobi.studio.documentcomposition.editors.DocumentCompositionEditor"
            default="true"
            extensions="sbidoccomp"
            icon="icons/objecticon_DOCCOMP.png"
            id="it.eng.spagobi.studio.documentcomposition.editors.DocumentCompositionEditor"
            name="Document Composition Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="it.eng.spagobi.studio.documentcomposition.popupmenus.ResourceNavigatorContribution"
            targetID="it.eng.spagobi.studio.core.views.ResourceNavigator">
         <action
               class="it.eng.spagobi.studio.documentcomposition.actions.NewDocumentCompositionAction"
               icon="icons/objecticon_DOCCOMP.png"
               id="it.eng.spagobi.studio.documentcomposition.actions.NewDocumentCompositionAction"
               label="Document Composition"
               menubarPath="group.new"
               style="push" />
      </viewerContribution>
   </extension>
   <extension point="org.eclipse.ui.views">
        <view id="it.eng.spagobi.studio.documentcomposition.views.properties"
             name="Properties"
          class="it.eng.spagobi.studio.documentcomposition.views.PropertiesView"
          icon="icons/objecticon_DOCCOMP.png"/>
	</extension>
	<extension point="org.eclipse.ui.views">
    	 <category 
           id="org.eclipse.ui.article"
           name="Article">
        </category>
        <view id="org.eclipse.ui.articles.views.wordview"
                name="Word View"
                icon="icons\view.gif"
                class="it.eng.spagobi.studio.documentcomposition.views.WordView"/>
	</extension>
	
	<!-- tabs di navigazione -->
	<extension point="org.eclipse.ui.views">
    	 <category 
           id="org.eclipse.ui.article"
           name="Navigazione">
        </category>
        <view id="it.eng.spagobi.studio.documentcomposition.views"
                name="Navigazione"
                icon="icons\view.gif"
                class="it.eng.spagobi.studio.documentcomposition.views.NavigationView"/>
	</extension>	
	
 </plugin>
