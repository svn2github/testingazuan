<project name="${project.name}" default="makeDist" basedir=".">
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <!--   DEFINIZIONE FILE DI PROPERTY						                                      -->
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ --> 
  <property file="build.properties"/>	
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <!--   DEFINIZIONE CLASSPATH						                                            -->
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ --> 
	<path id="jar.classpath">
    		<pathelement path="${classpath}"/>
    		<!-- LIBRERIE SPECIFICHE APPLICATIVO  -->
    		<fileset dir="${lib.dir}">
          		<include name="**/*.jar"/>
    		</fileset>
    		<!-- LIBRERIE ESTERNE DEL WEB CONTAINER necessarie per la compilazione -->
    		<fileset dir="${runtime.lib}">
          		<include name="**/*.jar"/>
    		</fileset>
    		<!-- COMPILATI DI SPAGOBI necessarie per la compilazione -->
    		<pathelement path="${spagobi.bin.dir}"/>
 	</path>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!--   PULIZIA AMBIENTE						                                                -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++--> 
  <target name="clean" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}/${project.name}" />
  </target>	   	
  <target name="init" depends="clean">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!--   SCARICO DEI SORGENTI AGGIORNATI DA CVS							                        -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <target name="svn.checkout" depends="init"
      description="Sincronizza l'applicazione con il repository">
    <!--
    <svn>
      <checkout url="${svn.base.location}/${project.name}" destPath="../" />
    </svn>
    -->
    <exec dir="${project.dir}" executable="svn" >
      <arg line="checkout ${svn.base.location}/${project.name} ."/>
    </exec>	 
  </target>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!--   COMPILAZIONE							                                                  -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <target name="compile" depends="svn.checkout" description="compile the source" >
    <!-- Compile the java code from ${src} into ${build}/${webapp_name}/WEB-INF/classes -->
    <javac srcdir="${src}" destdir="${build}" debug="on">
      <classpath refid="jar.classpath"/>
    </javac> 
  </target>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!--   COPIA EVENTUALI RISORSE     Aggiungere eventuali altri tipi di file        -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->	  	  
  <target name="copy.artifacts" depends="compile">
    <copy todir="${build}">
      <fileset dir="${src}">
        <exclude name="**/*.svn"/>
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
  </target>

	<target name="create.jar" depends="copy.artifacts" >
	      <mkdir dir="${dist}/${project.name}"/>
	      <delete file="${dist}/${project.name}/${jar.name}-${project.version}.jar" />
	      <jar destfile="${dist}/${project.name}/${jar.name}-${project.version}.jar" 
	           basedir="${build}" />
	</target>

  <target name="javadoc">    
    <javadoc packagenames="*"
      sourcepath="${src}"
      defaultexcludes="yes"
      destdir="${dist}/${project.name}/javadoc"
      author="true"
      version="true"
      use="true">
      <classpath refid="jar.classpath"/>
    </javadoc>    
  </target>

  <target name="makeDist" >    
    <antcall target="create.jar" />
    <antcall target="javadoc" />
  </target>

</project>
