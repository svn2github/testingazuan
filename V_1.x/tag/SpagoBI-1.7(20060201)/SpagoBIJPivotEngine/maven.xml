<project    xmlns:j="jelly:core"
            xmlns:maven="jelly:maven"
            xmlns:ant="jelly:ant">

  <goal name="classcompile">
	<attainGoal name="jar:install"/>
  </goal>

  <goal name="buildwar">
	<ant:property name="maven.war.src" value="${basedir}/WebContent"/>
	<attainGoal name="war:webapp"/>
        <ant:copy todir="${basedir}/">
                <ant:fileset dir="${basedir}/target/">
                    <ant:include name="**/*.war"/>
                </ant:fileset>
        </ant:copy>

        <ant:copy todir="${basedir}/target/SpagoBIJPivotEngine/WEB-INF/classes/">
                <ant:fileset dir="${basedir}/JavaSource/">
                    <ant:include name="**/*.properties"/>
                    <ant:include name="**/*.xml"/>
                </ant:fileset>
        </ant:copy>

        <attainGoal name="war:war"/>
        <ant:copy file="${basedir}/target/SpagoBIJPivotEngine.war" todir="${buildDir}"/>
        <attainGoal name="clean:clean"/>

  </goal>
</project>
