<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
  <external-component-plugins>
    <target-component>org.exoplatform.services.backup.ImportExportService</target-component>
    <component-plugin> 
      <name>organization</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.organization.impl.ImportExportPluginImpl</type>
      <description>Export the organization data</description>
      <init-params>
        <value-param>
          <name>data.version</name>
          <description>The current data version of the plugin module</description>
          <value>1.1</value>
        </value-param>
        <object-param>
          <name>data.transformer.1</name>
          <description>description</description>
          <object type="org.exoplatform.services.organization.impl.DataTransformerImpl">
            <field  name="name"><string>SqlDataTransformer</string></field>
            <field  name="description"><string>transform data to sql insert statement</string></field>
            <field  name="userEntryExtension"><string>.sql</string></field>
            <field  name="serviceEntryExtension"><string>.sql</string></field>
            <field  name="userDataTemplateName">
              <string>org/exoplatform/services/organization/impl/user-sql.vm</string>
            </field>
            <field  name="serviceDataTemplateName">
              <string>org/exoplatform/services/organization/impl/service-sql.vm</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>data.transformer.2</name>
          <description>tranform the organization data to xml</description>
          <object type="org.exoplatform.services.organization.impl.DataTransformerImpl">
            <field  name="name"><string>XMLDataTransformer</string></field>
            <field  name="description"><string>transform data to xml</string></field>
            <field  name="userEntryExtension"><string>.xml</string></field>
            <field  name="serviceEntryExtension"><string>.xml</string></field>
            <field  name="userDataTemplateName">
              <string>org/exoplatform/services/organization/impl/user-xml.vm</string>
            </field>
            <field  name="serviceDataTemplateName">
              <string>org/exoplatform/services/organization/impl/service-xml.vm</string>
            </field>
          </object>
        </object-param>

        <object-param>
          <name>xml.object.converter.1</name>
          <description>tranform the organization data to xml</description>
          <object type="org.exoplatform.services.organization.impl.V11XMLObjectConverter">
            <field  name="name"><string>1.1 data converter</string></field>
            <field  name="description"><string>convert data version 1.1</string></field>
            <field  name="dataVersion"><string>1.1</string></field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
