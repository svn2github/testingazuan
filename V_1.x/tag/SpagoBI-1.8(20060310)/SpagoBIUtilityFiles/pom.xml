                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jonas-server</id>
      <build>
        <plugins>
      	  <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>

		    <!-- copy the required files in the correct server folders structure -->
		    <mkdir dir="${basedir}/../build/jonas-server/"/>
