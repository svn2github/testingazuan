    <profile>
      <id>bi</id>
      <build>
        <plugins>
      	  <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>

		    <!-- unzip spagobi -->
		    <mkdir dir="${basedir}/../build/bi/spagobi"/>
		    <unzip src="${basedir}/../SpagoBIProject/target/spagobi-1.8.war" 
			   dest="${basedir}/../build/bi/spagobi"/>

		    <!-- delete hibernate configuration file for JOnAS -->
		    <delete file="${basedir}/../build/bi/spagobi/WEB-INF/classes/hibernate_jonas.cfg.hsql.xml"/>

		    <!-- delete cms configuration file for jackrabbit -->
		    <delete file="${basedir}/../build/bi/spagobi/WEB-INF/conf/cms-jackrabbit.xml"/>

		    <!-- unzip SpagoBIJasperReportEngine -->
		    <mkdir dir="${basedir}/../build/bi/SpagoBIJasperReportEngine"/>
		    <unzip src="${basedir}/../SpagoBIJasperReportEngine/target/SpagoBIJasperReportEngine-1.8.war" 
			   dest="${basedir}/../build/bi/SpagoBIJasperReportEngine"/>

		    <!-- unzip SpagoBIJPivotEngine -->
		    <mkdir dir="${basedir}/../build/bi/SpagoBIJPivotEngine"/>
		    <unzip src="${basedir}/../SpagoBIJPivotEngine/target/SpagoBIJPivotEngine-1.8.war" 
			   dest="${basedir}/../build/bi/SpagoBIJPivotEngine"/>

		    <!-- copy and overwrite the required files -->
		    <copy todir="${basedir}/../build/bi/" overwrite="true">
  		      <fileset dir="${basedir}/bi/" />
 		    </copy>

		    <!-- put external spagobi packages into SpagoBI -->
		    <copy file="${basedir}/../ExoPortalSecurityProvider/target/sbi.security.exo-1.8.jar"
			  todir="${basedir}/../build/bi/spagobi/WEB-INF/lib"/>
		    <copy file="${basedir}/../SpagoBIJasperReportDriver/target/sbi.drivers.jasperreport-1.8.jar"
			  todir="${basedir}/../build/bi/spagobi/WEB-INF/lib"/>
		    <copy file="${basedir}/../SpagoBIJPivotDriver/target/sbi.drivers.jpivot-1.8.jar"
			  todir="${basedir}/../build/bi/spagobi/WEB-INF/lib"/>

		    <!-- redo the spagobi.war -->
		    <zip destfile="${basedir}/../build/bi/spagobi.war" 
			 basedir="${basedir}/../build/bi/spagobi/" />
		    <delete dir="${basedir}/../build/bi/spagobi/" />

		    <!-- redo the SpagoBIJasperReportEngine.war -->
		    <zip destfile="${basedir}/../build/bi/SpagoBIJasperReportEngine.war" 
			 basedir="${basedir}/../build/bi/SpagoBIJasperReportEngine/" />
		    <delete dir="${basedir}/../build/bi/SpagoBIJasperReportEngine/" />

		    <!-- redo the SpagoBIJPivotEngine.war -->
		    <zip destfile="${basedir}/../build/bi/SpagoBIJPivotEngine.war" 
			 basedir="${basedir}/../build/bi/SpagoBIJPivotEngine/" />
		    <delete dir="${basedir}/../build/bi/SpagoBIJPivotEngine/" />

                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
