     <!-- ********************* START GENERAL CONFIGURATION ************************ -->
     <!-- THIS DATE FORMAT IS USED FOR DISPLAY THE DATA -->

    
    <!--  Date format sent to server-->
     <DATE-FORMAT-SERVER format="dd/MM/yyyy"/>

    <!--  Date visual format according to current language-->    
     <DATE-FORMAT-IT_IT format="dd/MM/yyyy"/>
     <DATE-FORMAT-EN_US format="MM/dd/yy"/>
     <DATE-FORMAT-FR_FR format="dd/MM/yy"/>      
  	 <TIMESTAMP-FORMAT format="dd/MM/yyyy hh:mm:ss"/>
  	 
    <!--  Date visual format if language is not found-->      	 
  	<DATE-FORMAT format="dd/MM/yyyy"/>
     
     <LOOKUP numberRows = "20" />


     <SPAGOBI_CONTEXT>/SpagoBI</SPAGOBI_CONTEXT>
    
