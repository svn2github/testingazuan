<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <owner>exo</owner>
  <!-- <locale>it</locale> -->
  <viewPermission>any</viewPermission>
  <editPermission>owner</editPermission>

  <portalLayout decorator="exo" renderer="ContainerRowRenderer"
    width="100%" height="100%">
    <portlet>
      <showInfoBar>false</showInfoBar>
      <windowId>exo:/content/DisplayStaticContent/bannerHomePage</windowId>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>title=Default Content</value>
          <value>uri=war:/portal/spagobi-static-content/bannerHomePage.html</value>
          <value>encoding=UTF-8</value>
        </preference>
      </portlet-preferences>
    </portlet>

    <portlet>
      <portlet-style>horizontal</portlet-style>
      <showInfoBar>false</showInfoBar>
      <windowId>exo:/nav/HorizontalMenu/toolbar</windowId>
    </portlet>

    <container renderer="ContainerColumnRenderer" height="100%">
      <container renderer="ContainerRowRenderer" decorator="menu" width="200px">
        <portlet>
          <portlet-style>menu</portlet-style>
          <showInfoBar>false</showInfoBar>
          <windowId>exo:/nav/Menu/menu</windowId>
        </portlet>
        <portlet>
          <portlet-style>welcome</portlet-style>
          <title>Welcome</title>
          <showInfoBar>false</showInfoBar>
          <windowId>exo:/user/WelcomePortlet/welcome-user</windowId>
        </portlet>
        <portlet>
          <portlet-style>exo-content</portlet-style>
          <showInfoBar>false</showInfoBar>
          <windowId>exo:/content/DisplayStaticContent/loghelp</windowId>
          <portlet-preferences>
            <preference>
              <name>default</name>
                <value>title=Default Content</value>
                <value>uri=war:/portal/spagobi-static-content/loghelp.html</value>
                <value>encoding=UTF-8</value>
            </preference>
         </portlet-preferences>
        </portlet>
      </container>
      <container renderer="ContainerRowRenderer">
        <portlet height="20px">
          <portlet-style>breadcrumbs</portlet-style>
          <showInfoBar>false</showInfoBar>
          <windowId>exo:/nav/Breadcrumbs/breadcrumbs</windowId>
        </portlet>
        <container decorator="exo-body">
          <body>
            <componentType>page-node</componentType>
            <componentId>/</componentId>
          </body>
        </container>
      </container>
    </container>
    
    <portlet>
      <showInfoBar>false</showInfoBar>
      <windowId>exo:/content/DisplayStaticContent/footer</windowId>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>title=Default Content</value>
          <value>uri=war:/portal/spagobi-static-content/footer.html</value>
          <value>encoding=UTF-8</value>
        </preference>
      </portlet-preferences>
    </portlet>   
    
  </portalLayout>

  <mobilePortalLayout decorator="exo" renderer="ContainerRowRenderer"
    width="100%" height="100%">
    <portlet>
      <portlet-style>horizontal</portlet-style>
      <showInfoBar>false</showInfoBar>
      <windowId>exo:/nav/HorizontalMenu/toolbar</windowId>
    </portlet>
    <container renderer="ContainerRowRenderer">
      <container decorator="exo-body">
        <body>
          <componentType>page-node</componentType>
          <componentId>/</componentId>
        </body>
      </container>
    </container>
    <portlet>
      <portlet-style>breadcrumbs</portlet-style>
      <showInfoBar>false</showInfoBar>
      <windowId>exo:/nav/Breadcrumbs/breadcrumbs</windowId>
    </portlet>
  </mobilePortalLayout>
</portal-config>
