		    <!-- unzip SpagoBIJasperReportEngine -->
		    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIJasperReportEngine.war"/>
                    <unzip src="${basedir}/../SpagoBIJasperReportEngine/target/SpagoBIJasperReportEngine.war" 
			   dest="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIJasperReportEngine.war"/>
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIJasperReportEngine.war/WEB-INF/lib/log4j-1.2.8.jar" />

		    <!-- unzip SpagoBIJPivotEngine -->
		    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy"/>
                    <unzip src="${basedir}/../SpagoBIJPivotEngine/target/SpagoBIJPivotEngine.war" 
			   dest="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIJPivotEngine.war"/>
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIJPivotEngine.war/WEB-INF/lib/log4j-1.2.8.jar" />
		    
		    <!-- unzip SpagoBIBirtReportEngine -->
		    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy"/>
                    <unzip src="${basedir}/../SpagoBIBirtReportEngine/target/SpagoBIBirtReportEngine.war" 
			   dest="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIBirtReportEngine.war"/>
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIBirtReportEngine.war/WEB-INF/lib/log4j-1.2.8.jar" />
		    
		    <!-- unzip SpagoBIGeoEngine -->
		    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy"/>
                    <unzip src="${basedir}/../SpagoBIGeoEngine/target/SpagoBIGeoEngine.war" 
			   dest="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIGeoEngine.war"/>
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIGeoEngine.war/WEB-INF/lib/log4j-1.2.8.jar" />
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIGeoEngine.war/WEB-INF/lib/xalan-2.4.0.jar" />
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIGeoEngine.war/WEB-INF/lib/xercesImpl.jar" />

		    <!-- unzip SpagoBIWekaEngine -->
		    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIWekaEngine.war"/>
                    <unzip src="${basedir}/../SpagoBIWekaEngine/target/SpagoBIWekaEngine.war" 
			   dest="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIWekaEngine.war"/>
		    <delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIWekaEngine.war/WEB-INF/lib/log4j-1.2.8.jar" />

		    <!-- unzip SpagoBIQbeEngine -->
		    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIQbeEngine.war"/>
                    <unzip src="${basedir}/../SpagoBIQbeEngine/target/SpagoBIQbeEngine.war" 
			   dest="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIQbeEngine.war"/>
				<!--
				<delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIQbeEngine.war/WEB-INF/lib/commons-logging-1.0.4.jar" />
				<delete file="${basedir}/../build/jboss-server/server/default/deploy/SpagoBIQbeEngine.war/WEB-INF/lib/log4j-1.2.8.jar" />
				-->
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
