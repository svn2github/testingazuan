	<filter>
		<filter-name>SpagoBIAccessFilter</filter-name>
		<filter-class>it.eng.spagobi.utilities.filters.SpagoBIAccessFilter</filter-class>
	</filter>
	
	<filter-mapping>
    	<filter-name>SpagoBIAccessFilter</filter-name>
    	<url-pattern>/JasperReportServlet/*</url-pattern>
	</filter-mapping>
	
	<servlet>
        <servlet-name>JasperReportServlet</servlet-name>
        <servlet-class>it.eng.spagobi.engines.jasperreport.JasperReportServlet</servlet-class>
    	<init-param>
            <param-name>SECURITY_ABLE</param-name>
            <param-value>FALSE</param-value>
        </init-param>
    </servlet>
    
    <servlet>
        <servlet-name>JRImageServlet</servlet-name>
        <servlet-class>it.eng.spagobi.engines.jasperreport.JRImageServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SpagoBIDrillServlet</servlet-name>
        <servlet-class>it.eng.spagobi.utilities.callbacks.drill.SpagoBIDrillServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>JasperReportServlet</servlet-name>
        <url-pattern>/JasperReportServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>JRImageServlet</servlet-name>
        <url-pattern>/JRImageServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SpagoBIDrillServlet</servlet-name>
        <url-pattern>/SpagoBIDrillServlet</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
    
    <resource-ref>
 		<description>Data Warehouse db</description>
 		<res-ref-name>jdbc/${JNDI_NAME}</res-ref-name>
 		<res-type>javax.sql.DataSource</res-type>
 		<res-auth>Container</res-auth>
    </resource-ref>
    
    ${SPAGOBI_CONN_REF}
    
</web-app>

